/**app.wxss**/
@import "/pages/public/public.wxss";
@import "/wxParse/wxParse.wxss";
.cf:before,
.cf:after,
.clearfix:before,
.clearfix:after
{
    content: " ";
    display: table;
}
.cf:after,
.clearfix:after
{
    clear: both;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.fl{float: left;}
.fr{float: right;}
view,navigator{ -webkit-tap-highlight-color:rgba(255,0,0,0);}
.new-mg-block{width: 90%; margin: 0 auto;border-bottom: 1rpx solid #f5f5f5; padding: 20rpx 0;display: block;cursor: pointer;color: #333;overflow: hidden;}
.new-mg-block .n-face{display: block;width: 85rpx;height: 85rpx;border-radius: 50%;float: left;}
.new-mg-block .n-title{font-size: 32rpx;font-weight: bold;margin-bottom: 10rpx;}
.new-mg-block .n-content{width: 560rpx;float: right;}
.new-mg-block .n-content .c-top-bg{overflow: hidden;}
.new-mg-block .n-content .c-top-bg .c-left{padding-bottom: 20rpx;}
.new-mg-block .n-content .c-top-bg .c-left .c-name{color: #333;font-weight: bold;display: inline-block;vertical-align: middle;margin-right: 15rpx;font-size: 30rpx; }
.new-mg-block .n-content .c-top-bg .c-left .c-label{width:auto;font-size: 25rpx;color: #fff;background: #ecab44;padding: 1rpx 13rpx 4rpx 10rpx;border-radius: 30rpx;display: inline-block;vertical-align: middle; margin-right: 10rpx;}
.new-mg-block .n-content .c-top-bg .c-right{font-size: 25rpx; padding-bottom: 20rpx;}
.new-mg-block .n-content .c-top-bg .c-right>span{color: #0484cf;display: inline-block;vertical-align: bottom;}
.new-mg-block .n-content .c-top-bg .c-right .new-logo{background: url("http://www.imaibo.net/imaiboPC/static/activity/page/ustocks/new-logo.png") no-repeat;width: 35rpx;height: 35rpx; margin-right: 10rpx;background-size: 100% 100%;}
.line-clamp5{overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 5;-webkit-box-orient: vertical;}
.new-mg-block .n-content .c-middle-bg{font-size: 28rpx;color: #595959;}
.new-mg-block .n-content .c-middle-bg a{color: #0484cf;}
.new-mg-block .n-content .c-bottom-bg{font-size: 25rpx;color: #0484cf; margin-top: 20rpx;}

.loading{margin: 5% auto;
    position: relative;
    border-top: 8rpx solid #ddd;
    border-right:  8rpx solid #ddd;
    border-bottom:  8rpx solid #ddd;
    border-left:  8rpx solid #3f99d6;
    -webkit-transform: translateZ(0);
    -webkit-animation: loading 1.1s infinite linear;
}
.loading.hide{display: none;}
.loading,.loading:after {border-radius: 100px;width:30rpx;height:30rpx;}
@-webkit-keyframes loading {
    0% {-webkit-transform: rotate(0deg);
    }
    100% {-webkit-transform: rotate(360deg);
    }
}

.nav-bg{ border-bottom: 1rpx solid #ddd; overflow: hidden;padding-bottom: 20rpx; width: 90%;margin:0 auto;}
.nav-bg .user-info{position: relative; color: #333; font-size: 28rpx; padding-top: 15rpx;float: left;}
.nav-bg .user-info .i-face{ border-radius: 50%; width: 80rpx; height: 80rpx; display: inline-block; vertical-align: middle;}
.nav-bg .user-info .i-name{display: inline-block; vertical-align: middle; margin-left: 20rpx; color: #333;}
.nav-bg .user-info>.user-group{ position: absolute; left: 58rpx; bottom: 0; width: 30rpx;height: 30rpx;}

.nav-bg .user-tab{ position:relative;float: right; padding-top: 30rpx;}
.nav-bg .user-tab div{ display: inline-block; vertical-align: middle;}
.nav-bg .user-tab .t-tab{  font-size:26rpx;}
.nav-bg .user-tab .t-tab .s1{ color: #3f99d6; display: block; text-align: center; white-space:nowrap; }
.nav-bg .user-tab .t-tab .s2{ color: #bbbccc; display: block; text-align: center; white-space:nowrap; }