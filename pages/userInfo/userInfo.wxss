.getUserInfo-bg{
  height: 100vh;
  }
.getUserInfo-bg .i-bg{
  width: 100%;
  height: 100%;
  background: #000;
  opacity: .5;
  }
.getUserInfo-bg .i-pop-bg{
   width: 80%;
   height: 280rpx;
   background: #fff;
   border-radius: 15rpx;
   position: absolute;
   top:40%;
   left: 50%;
   margin-top: -140rpx;
   margin-left: -40%;
  }
.getUserInfo-bg .i-pop-bg  .p-title{
  text-align: center;
  padding: 50rpx 0 50rpx;
  font-size: 35rpx;
}
.getUserInfo-bg .i-pop-bg  .p-btn{
  width: 80%;
}
.userInfo-bg{
  position: relative;
  }
.userInfo-bg .i-face{
   width: 150rpx;
   height: 150rpx;
   border-radius: 50%;
   margin: 60rpx auto;
}
.userInfo-bg .i-text{
  text-align: center;
  margin-bottom: 50rpx;
}
.userInfo-bg .i-btn{
  width: 60%;
  margin-bottom: 40rpx;
}
